        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
           <b> <%=listing.title%><br></b>
           &#8377;<%=listing.price%> / night
        </p>
        </div>
      </div>
    </a>
      <% }%>
    </div>

